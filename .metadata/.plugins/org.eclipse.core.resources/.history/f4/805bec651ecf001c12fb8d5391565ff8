import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int n = 1;
		int r = 0;
		int calc=0;
		
		System.out.println("Informe um numero entre 1 e 60: ");
		n = sc.nextInt();
		
		for(int i = 1; n==0; i++) {
			System.out.println("Informe um numero entre 1 e 60: ");
			n = sc.nextInt();
			
			while ( r <= n  ) {
				if(i%3 == 0) {
					calc = i;
					r ++;
				}
				if(i%3 == 3){
					calc = i;
					r ++;
				}
			}
			
		}
	}
	
	
	

}
