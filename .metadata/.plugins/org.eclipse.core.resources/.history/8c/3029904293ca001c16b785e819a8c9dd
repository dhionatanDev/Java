package lacosRepeticao;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int testes;
		float quantia, qntR, qntC, qntS, total, ratos, coelhos, sapos;
		quantia = 0;
		qntR = 0;
		qntC = 0;
		qntS = 0;
		total = 0;
		ratos = 0;
		coelhos = 0;
		sapos = 0;
		char tipo;
		
		
		testes = 0;
		System.out.println("Informe quantos testes foram feitos: ");
		testes = sc.nextInt();
		
		for (int i = testes; i >= 1; i --) {
			System.out.println("Quantas cobaias foram usadas: ");
			quantia = sc.nextFloat();
			
			while (quantia - qntR - qntC - qntS > 0) {
				
				System.out.println("Qual é o tipo de cobaia R = ratos, S = Sapos, C = Coelhos ");
				tipo = sc.next().charAt(0);
				if (tipo == 'R') {
					System.out.println("Informe a quantidade de Ratos: ");
					qntR = sc.nextFloat();
				}
				else {
					if (tipo == 'C') {
						System.out.println("Informe a quantidade de Coelhos: ");
						qntC = sc.nextFloat();
					}
					else {
						System.out.println("Informe a quantidade de Sapos: ");
						qntS = sc.nextFloat();
					}
				}
				total = total + qntR + qntC + qntS;
				ratos = (ratos + qntR) / total * 100;
				sapos = (sapos + qntS) / total * 100;
				coelhos = (coelhos + qntC) / total *100;
				
			}
			System.out.println("No final do ano foram utilizadas um total de: " + total + " a porcentagem de coelhos utilizados foi de: " + coelhos + " %,  ratos " + ratos + " %  sapos  " + sapos + " %");
		}

	}

}
